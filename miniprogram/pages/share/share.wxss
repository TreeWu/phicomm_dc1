/* pages/device-share/device-share.wxss */
.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.tabs {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  color: #666;
}

.tab.active {
  color: #07C160;
  border-bottom: 4rpx solid #07C160;
}

.list-container {
  margin-top: 20rpx;
}

.list-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.device-info {
  flex: 1;
}

.device-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-name, .status {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.status.pending {
  color: #FF9900;
}

.status.accepted {
  color: #07C160;
}

.status.rejected, .status.revoked {
  color: #FF4D4F;
}

.actions {
  display: flex;
}

.btn {
  margin-left: 15rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
}

.btn.accept {
  background-color: #07C160;
  color: white;
}

.btn.reject {
  background-color: #FF4D4F;
  color: white;
}

.btn.revoke {
  background-color: #FF9900;
  color: white;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}